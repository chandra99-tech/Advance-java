<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
<!--  calls default constructor of HelloWorld class  -->
<bean id="hw" class="com.demo.bean.HelloWorld"> </bean>
<!--  setter injection  -->
<bean id="emp1" class="com.demo.bean.Employee">
<property name="eid" value="12"/>
<property name="ename" value="xxxxx"/>
<property name="sal" value="30000"/>
</bean>
<!--  constructor injection  -->
<!--  <bean id="emp2" class="com.demo.bean.Employee">
<constructor-arg type="int" value="12"></constructor-arg>
<constructor-arg type="string" value="yyyyy"></constructor-arg>
<constructor-arg type="double" value="40000.00"></constructor-arg>
</bean>  -->
<bean id="emp2" class="com.demo.bean.Employee">
<constructor-arg index="0" value="12"/>
<constructor-arg index="1" value="yyyyy"/>
<constructor-arg index="2" value="40000.00"/>
</bean>
<bean id="ad1" class="com.demo.bean.Address">
<property name="street" value="SB Road"/>
<property name="city" value="Pune"/>
<property name="pincode" value="411016"/>
</bean>
<bean id="u1" class="com.demo.bean.MyUser">
<property name="uid" value="100"/>
<property name="uname" value="Gauri"/>
<property name="email" value="ggg@gmail.com"/>
<property name="addr" ref="ad1"/>
</bean>
</beans>